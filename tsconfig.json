{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./lib/",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/**/*.ts"]
}
